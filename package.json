{
  "name": "nite-nyamins",
  "version": "1.0.0",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "test": "jest --watchAll",
    "test:ci": "jest",
    "android": "DARK_MODE=media expo run:android",
    "ios": "DARK_MODE=media expo run:ios",
    "android:prebuild": "expo prebuild --platform android --clean",
    "ios:prebuild": "expo prebuild --platform ios --clean",
    "web": "DARK_MODE=media expo start --web",
    "postinstall": "patch-package"
  },
  "jest": {
    "preset": "jest-expo",
    "testMatch": [
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg|@gluestack-ui)"
    ]
  },
  "dependencies": {
    "@expo/html-elements": "0.4.2",
    "@gluestack-ui/button": "^1.0.8",
    "@gluestack-ui/nativewind-utils": "1.0.23",
    "@gluestack-ui/overlay": "^0.1.16",
    "@gluestack-ui/switch": "^0.1.23",
    "@gluestack-ui/toast": "^1.0.8",
    "babel-plugin-module-resolver": "^5.0.2",
    "expo": "52.0.10",
    "expo-dev-client": "~5.0.1",
    "expo-status-bar": "~2.0.0",
    "nativewind": "4.0.36",
    "react": "18.3.1",
    "react-native": "0.76.2",
    "react-native-css-interop": "0.0.36",
    "react-native-maps": "1.18.0",
    "react-native-reanimated": "^3.16.1",
    "react-native-svg": "15.8.0",
    "tailwindcss": "^3.4.15"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^12.8.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.3.12",
    "jest": "^29.7.0",
    "jest-expo": "~52.0.1",
    "jscodeshift": "0.15.2",
    "typescript": "^5.1.3"
  },
  "private": true
}
